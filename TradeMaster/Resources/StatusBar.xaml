<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid x:Key="StatusBar">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <Label Name="lb_Ready" Foreground="White" Grid.Column="0" Content="Ready" VerticalContentAlignment="Center" Padding="5 0"/>
        <Label Grid.Column="2" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Padding="15 0" Content="Adding Table details to DataBase." Foreground="White"/>

    </Grid>

</ResourceDictionary>